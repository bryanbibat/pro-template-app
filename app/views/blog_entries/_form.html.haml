.group
  = f.label :subject, t("activerecord.attributes.blog_entry.subject", :default => "Subject"), :class => :label
  = f.text_field :subject, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :content, t("activerecord.attributes.blog_entry.content", :default => "Content"), :class => :label
  = f.text_area :content, :class => 'text_area'
  %span.description Ex: a simple text
.group
  = f.label :publish_at, t("activerecord.attributes.blog_entry.publish_at", :default => "Publish at"), :class => :label
  = f.datetime_select :publish_at, :class => 'datetime_select'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), blog_entries_path, :class => "text_button_padding link_button"
