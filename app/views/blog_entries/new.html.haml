.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", blog_entries_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_blog_entry_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      Blog Entry
    .inner
      = form_for :blog_entry, :url => blog_entries_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
